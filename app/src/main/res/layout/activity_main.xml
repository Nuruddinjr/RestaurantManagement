<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="match_parent"
tools:context="uz.iutlab.restaurantmanagement.MainActivity">

<fragment
    android:id="@+id/topFragment"
    android:name="uz.iutlab.restaurantmanagement.TableTypesFragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="45" />

<fragment
    android:id="@+id/bottomFragment"
    android:name="uz.iutlab.restaurantmanagement.DetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="45"
    android:layout_margin="16dp"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="1"
    >
        <Button
            android:id="@+id/mainActivity_newOrderBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Order"

            />

        <Button
            android:id="@+id/mainActivity_changeInfoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change Info"

            android:enabled="false"/>

        <Button
            android:id="@+id/mainActivity_resetBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"
            android:enabled="false"
            />
</LinearLayout>

</LinearLayout>
